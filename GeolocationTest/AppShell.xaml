<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GeolocationTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GeolocationTest"
    xmlns:views="clr-namespace:GeolocationTest.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Map"
             Icon="elscooter.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Scan"
             Icon="scan.png">
            <ShellContent ContentTemplate="{DataTemplate views:Scan}" />
        </Tab>
    </TabBar>
</Shell>
